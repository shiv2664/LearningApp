<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/twf_background">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:id="@+id/lottieanimlogin"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/birdflying2"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="380dp"
            android:layout_height="330dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/levelselect" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/open0star"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="104dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginStart="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/level2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/locked"
            android:text="2"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/level1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp" />

        <com.google.android.material.button.MaterialButton
            app:backgroundTint="@null"
            android:background="@drawable/locked"
            android:id="@+id/level3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="3"
            android:textAlignment="gravity"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="170dp"
            android:layout_alignBaseline="@+id/level2"
            android:layout_alignEnd="@+id/imageView"
            android:layout_marginEnd="30dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/level4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/locked"
            android:text="4"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/level1"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginStart="90dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/level5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/locked"
            android:text="5"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/level3"
            android:layout_marginTop="20dp"
            android:layout_alignEnd="@+id/imageView"
            android:layout_marginEnd="90dp"
            />

        <TextView
            android:id="@+id/gamename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70sp"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            android:layout_marginTop="23dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <com.google.android.material.button.MaterialButton
            app:backgroundTint="@null"
            android:background="@drawable/twf_back"
            android:id="@+id/back2"
            android:layout_width="80dp"
            android:layout_height="70dp"
           android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="15dp"
            android:text="" />

