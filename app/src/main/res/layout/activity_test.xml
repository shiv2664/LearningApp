<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/launcherbg"
        android:layout_height="match_parent">


        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </HorizontalScrollView>

        <ImageView
            android:id="@+id/biticon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/play"
            android:layout_marginStart="35dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/gamename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="it Forest"
            android:textSize="50sp"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            android:layout_marginTop="28dp"
            android:textColor="#fcae01"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/biticon" />

        <Button
            android:id="@+id/play"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_below="@+id/gamename"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp" />

        <Button
            android:id="@+id/reward"
            android:layout_width="320dp"
            android:layout_height="78dp"
            android:layout_below="@+id/play"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/shop"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_below="@+id/reward"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/leader"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:layout_below="@+id/shop"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</layout>
