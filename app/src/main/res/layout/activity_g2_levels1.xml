<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@drawable/twf_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--            <com.airbnb.lottie.LottieAnimationView-->
            <!--                android:rotation="-45"-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:layout_marginTop="220dp"-->
            <!--                android:id="@+id/lottieanimlogin"-->
            <!--                android:layout_width="300dp"-->
            <!--                android:layout_height="200dp"-->
            <!--                app:lottie_rawRes="@raw/moneysleeping2"-->
            <!--                app:lottie_autoPlay="true"-->
            <!--                app:lottie_loop="true" />-->

            <com.airbnb.lottie.LottieAnimationView
                android:layout_alignParentEnd="true"
                android:layout_marginStart="70dp"
                android:layout_marginTop="400dp"
                android:id="@+id/lottieanimlogin"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:lottie_rawRes="@raw/twobirds"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <!--            <com.airbnb.lottie.LottieAnimationView-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:layout_marginStart="70dp"-->
            <!--                android:layout_marginTop="400dp"-->
            <!--                android:id="@+id/lottieanimlogin"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="200dp"-->
            <!--                app:lottie_rawRes="@raw/tiger"-->
            <!--                app:lottie_autoPlay="true"-->
            <!--                app:lottie_loop="true" />-->

            <LinearLayout
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="256dp"
                        android:fontFamily="@font/berlinsans"
                        android:text="Games Quiz"
                        android:textColor="@color/colorWhite"
                        android:textSize="26sp" />

                    <Button
                        android:layout_alignParentEnd="true"
                        android:id="@+id/button_help"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/helpbutton" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/berlinsans"
                    android:text="Choose the level you want to play"
                    android:textColor="@color/colorWhite"
                    android:textSize="38sp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:background="@drawable/circlepurple"
                    android:fontFamily="@font/berlinsans"
                    android:text="5"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/berlinlight"
                    android:textColor="@color/colorWhite"
                    android:text="easy"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/circlepurple"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="@font/berlinsans"
                    android:text="10"
                    android:textColor="@color/colorWhite"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/berlinlight"
                    android:text="medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp"/>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/circlepurple"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="@font/berlinsans"
                    android:text="15"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/berlinlight"
                    android:text="hard"
                    android:textSize="24sp" />


                <Button
                    android:layout_gravity="end"
                    android:id="@+id/selectButton"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/buttonorange"
                    android:fontFamily="@font/berlinlight"
                    android:text="select"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginStart="15dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/twf_back"
                    android:text="" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</layout>